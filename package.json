{
  "name": "@alferpal/change-this-please",
  "version": "1.0.0",
  "description": "change-this-please",
  "scripts": {
    "build": "npm-run-all -p build:*",
    "build:src": "tsc -p src",
    "build:test": "tsc -p test",
    "clean": "rimraf dist",
    "commit": "git-cz",
    "lint": "npm-run-all -p lint:*",
    "lint:src": "eslint --ext .ts src",
    "lint:test": "eslint --ext .ts test",
    "prebuild": "npm-run-all -p clean lint",
    "prerelease": "npm t",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "release": "standard-version -s",
    "start": "node dist/server.js | pino-colada",
    "test": "jest",
    "updateCOC": "weallbehave -o . && git add CODE_OF_CONDUCT.md && git commit -m 'docs(coc): updated CODE_OF_CONDUCT.md'",
    "updateContrib": "weallcontribute -o . && git add CONTRIBUTING.md && git commit -m 'docs(contributing): updated CONTRIBUTING.md'"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:alferpal/change-this-please.git"
  },
  "homepage": "https://github.com/alferpal/change-this-please",
  "bugs": "https://github.com/alferpal/change-this-please/issues",
  "keywords": [],
  "author": {
    "email": "alferpal@gmail.com",
    "name": "Alex Ferrando",
    "twitter": "alferpal",
    "url": "https://github.com/alferpal"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "~8.0.1",
    "@hapi/hapi": "~18.4.0",
    "blipp": "~4.0.1",
    "bluebird": "~3.7.0",
    "glob": "~7.1.4",
    "hapi-pino": "~6.2.0",
    "lodash": "~4.17.15",
    "make-promises-safe": "~5.1.0",
    "pino": "~5.13.4",
    "pino-colada": "~1.4.5"
  },
  "devDependencies": {
    "@types/bluebird": "~3.5.27",
    "@types/chai": "~4.2.3",
    "@types/glob": "~7.1.1",
    "@types/hapi__hapi": "~18.2.5",
    "@types/jest": "~24.0.18",
    "@types/lodash": "~4.14.144",
    "@types/pino": "~5.8.12",
    "@typescript-eslint/eslint-plugin": "~1.13.0",
    "@typescript-eslint/parser": "~1.13.0",
    "chai": "~4.2.0",
    "commitizen": "~4.0.3",
    "concurrently": "~5.0.0",
    "cz-conventional-changelog": "~3.0.2",
    "eslint": "~6.5.1",
    "eslint-config-airbnb-typescript": "~5.0.0",
    "eslint-plugin-import": "~2.18.2",
    "husky": "~3.0.8",
    "jest": "~24.9.0",
    "npm-run-all": "~4.1.5",
    "onchange": "~6.1.0",
    "rimraf": "~3.0.0",
    "standard-version": "~7.0.0",
    "ts-jest": "~24.1.0",
    "typescript": "~3.6.4",
    "weallbehave": "~1.2.0",
    "weallcontribute": "~1.0.9"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
